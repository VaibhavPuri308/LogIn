<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.unitconvertor.MainActivity">

    <TextView
        android:id="@+id/Answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="85dp"
        android:hint="Answer"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/InchtoCentimeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inch to Centimeter"
        app:layout_constraintBaseline_toBaselineOf="@+id/CentimetertoInch"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/LitretoGallon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Litre to Gallon"
        app:layout_constraintBaseline_toBaselineOf="@+id/GallontoLitre"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/KilogramtoPound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="2dp"
        android:text="Kilogram to Pound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/GallontoLitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="31dp"
        android:text="Gallon to Litre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/KilogramtoPound" />

    <Button
        android:id="@+id/CentimetertoInch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="65dp"
        android:text="Centimeter to Inch"
        app:layout_constraintStart_toEndOf="@+id/InchtoCentimeter"
        app:layout_constraintTop_toBottomOf="@+id/GallontoLitre" />

    <Button
        android:id="@+id/PoundtoKilogram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="Pound to Kilogram"
        app:layout_constraintBaseline_toBaselineOf="@+id/KilogramtoPound"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:hint="Enter Number to Convert"
        android:inputType="textPersonName"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>